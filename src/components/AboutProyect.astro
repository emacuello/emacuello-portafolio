---
import type { Proyect } from '../utils/interfaces.ts';
interface Props {
	aboutProyect: Proyect;
}
const { aboutProyect } = Astro.props;
---

<div class="flex justify-center pt-10 mt-10">
	<a
		class="inline-flex h-12 animate-background-shine items-center justify-center rounded-md border border-gray-800 bg-[linear-gradient(110deg,#c7d2fe,45%,#7456FF,55%,#8678f9)] bg-[length:200%_100%] px-6 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2 focus:ring-offset-gray-50 text-black font-bold"
		href={aboutProyect.link}
		target="_blank"
	>
		Ir a {aboutProyect.title}
	</a>
</div>
<section class="text-gray-400 body-font overflow-hidden">
	<div class="container px-5 py-24 mx-auto">
		<div class="flex flex-wrap -m-12">
			<div class="p-12 md:w-1/2 flex flex-col items-start">
				<h2
					class="sm:text-3xl text-2xl title-font font-medium text-white mt-4 mb-4"
				>
					Qué es {aboutProyect.title}?
				</h2>
				<p class="leading-relaxed mb-8">
					{aboutProyect.aboutProyect}
				</p>
				<div
					class="flex items-center flex-wrap pb-4 mb-4 border-b-2 border-gray-800 border-opacity-75 mt-auto w-full"
				>
				</div>
			</div>
			<div class="p-12 md:w-1/2 flex flex-col items-start">
				<h2
					class="sm:text-3xl text-2xl title-font font-medium text-white mt-4 mb-4"
				>
					Cuál fue mí rol en {aboutProyect.title}?
				</h2>
				<p class="leading-relaxed mb-8">
					{aboutProyect.myRol}
				</p>
				<div
					class="flex items-center flex-wrap pb-4 mb-4 border-b-2 border-gray-800 border-opacity-75 mt-auto w-full"
				>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="text-gray-400 body-font">
	<div
		class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center"
	>
		<div
			class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center"
		>
			<h1
				class="title-font sm:text-4xl text-3xl mb-4 font-medium text-white"
			>
				Diagrama entidad relación - DER
				<br class="hidden lg:inline-block" />{aboutProyect.title}
			</h1>
			<p class="mb-8 leading-relaxed">
				{aboutProyect.der}
			</p>
			<div class="flex justify-center">
				<a
					class="inline-flex text-white bg-[#7456FF] border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg"
					href={aboutProyect.repository}
					target="_blank">Repositorio</a
				>
			</div>
		</div>
		<div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
			<img
				class="object-cover object-center rounded"
				alt={aboutProyect.imgDER.alt}
				src={aboutProyect.imgDER.url}
			/>
		</div>
	</div>
</section>
