<section class="text-gray-600 body-font">
	<div class="container px-5 py-24 mx-auto">
		<div class="flex flex-col text-center w-full mb-20">
			<h1
				class="sm:text-3xl text-2xl font-medium title-font mb-4 text-indigo-500"
			>
				{devops.metrics.title}
			</h1>
			<p class="lg:w-2/3 mx-auto leading-relaxed text-gray-400">
				{devops.metrics.resumen}
			</p>
		</div>
		<div class="flex flex-wrap -m-4">
			<!-- * -->
			{
				devops.metrics.content.map((metric) => (
					<div class="lg:w-1/3 sm:w-1/2 p-4">
						<div class="flex relative">
							<img
								alt={metric.img.alt}
								class="absolute inset-0 w-full h-full object-cover object-center"
								src={metric.img.url}
							/>
							<div class="px-8 py-10 relative z-10 w-full border-4 border-gray-200 bg-zinc-950 opacity-0 hover:opacity-100">
								<h2 class="tracking-widest text-sm title-font font-medium text-indigo-500 mb-1">
									{metric.title}
								</h2>
								<h1 class="title-font text-lg font-medium text-white mb-3">
									{metric.name}
								</h1>
								<p class="leading-relaxed text-gray-400">
									{metric.content}
								</p>
							</div>
						</div>
					</div>
				))
			}
			<!-- * -->
		</div>
	</div>
</section>
