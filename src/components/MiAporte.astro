---
import type { Proyect, Devops } from '../utils/interfaces.ts';
interface Props {
	aboutProyect: Proyect;
	devops: Devops;
}
const { aboutProyect, devops } = Astro.props;
---

<h1 class="flex justify-center text-3xl font-bold mb-5 text-indigo-500">
	Mi aporte al proyecto
</h1>
<section class="text-gray-400 body-font">
	<div class="container px-5 py-24 mx-auto flex flex-col">
		<div class="lg:w-4/6 mx-auto">
			<div class="rounded-lg h-64 overflow-hidden">
				<img
					alt={aboutProyect.extraImg?.alt}
					class="object-cover object-center h-full w-full"
					src={aboutProyect.extraImg?.url}
				/>
			</div>
			<div class="flex flex-col sm:flex-row mt-10">
				<div class="sm:w-1/3 text-center sm:pr-8 sm:py-8">
					<div
						class="w-20 h-20 rounded-full inline-flex items-center justify-center bg-gray-800 text-gray-600"
					>
						<img
							src="https://avatars.githubusercontent.com/u/84103575?v=4"
							alt="Emacuello logo"
						/>
					</div>
					<div
						class="flex flex-col items-center text-center justify-center"
					>
						<h2
							class="font-medium title-font mt-4 text-white text-lg"
						>
							Emanuel Cuello
						</h2>
						<div class="w-12 h-1 bg-indigo-500 rounded mt-2 mb-4">
						</div>
						<p class="text-base text-gray-400">
							Desarrollador Full Stack & SRE
						</p>
					</div>
				</div>
				<div
					class="sm:w-2/3 sm:pl-8 sm:py-8 sm:border-l border-gray-800 sm:border-t-0 border-t mt-4 pt-4 sm:mt-0 text-center sm:text-left"
				>
					<p class="leading-relaxed text-lg mb-4">
						{aboutProyect.contentExtra}
					</p>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- Mi Aporte -->
<section class="text-gray-400 body-font">
	<div class="container px-5 mx-auto">
		<div class="rounded-lg h-64 sm:h-auto overflow-hidden pb-10">
			<img
				alt={devops.img.alt}
				class="object-cover sm:object-contain h-full sm:h-auto w-full sm:w-auto"
				src={devops.img.url}
			/>
		</div>

		<div class="flex flex-wrap w-full mb-20">
			<div class="lg:w-1/2 w-full mb-6 lg:mb-0">
				<h1
					class="sm:text-3xl text-2xl font-medium title-font mb-2 text-indigo-500"
				>
					{devops.pipelines.name}
				</h1>
				<div class="h-1 w-20 bg-indigo-500 rounded"></div>
			</div>
			<p class="lg:w-1/2 w-full leading-relaxed">
				{devops.pipelines.resumen}
			</p>
		</div>
		<!-- Pipelines -->
		<!-- * -->
		<div class="flex flex-wrap -m-4">
			{
				devops.pipelines.content.map((pipeline) => (
					<div class="xl:w-1/4 md:w-1/2 p-4">
						<div class="bg-[#131313] p-6 rounded-lg">
							<img
								class="h-40 rounded w-full object-cover object-center mb-6"
								src={pipeline.img.url}
								alt={pipeline.img.alt}
							/>
							<h3 class="tracking-widest text-indigo-500 text-xs font-medium title-font">
								{pipeline.environment}
							</h3>
							<h4 class="tracking-widest text-indigo-500 text-xs font-medium title-font">
								{pipeline.trigger}
							</h4>
							<h2 class="text-lg text-white font-medium title-font mb-4">
								{pipeline.name}
							</h2>
							<p class="leading-relaxed text-base">
								{pipeline.content}
							</p>
						</div>
					</div>
				))
			}
		</div>
	</div>
</section>
