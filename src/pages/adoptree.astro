---
import Layout from '../layouts/Layout.astro';
import Contact from '../components/Contact.astro';
import Carrousel from '../components/Carrousel.astro';
import {
	adoptreeImgs,
	adoptreeContent,
	adoptreeDevops,
} from '../utils/contentAdoptree';
import AboutProyect from '../components/AboutProyect.astro';
import BackyFront from '../components/BackyFront.astro';
import ProyectSkills from '../components/ProyectSkills.astro';
import MiAporte from '../components/MiAporte.astro';
---

<Layout title="Adoptree">
	<h1
		class="text-4xl font-extrabold leading-tight lg:text-6xl cursor-default text-center animate-text-gradient bg-gradient-to-r from-[#b2a8fd] via-[#8678f9] to-[#c7d2fe] bg-[200%_auto] bg-clip-text text-transparent pt-2 pb-5 mb-5"
	>
		Adoptree
	</h1>
	<Carrousel imgUrl={adoptreeImgs} />
	<AboutProyect aboutProyect={adoptreeContent} />
	<BackyFront aboutProyect={adoptreeContent} />
	<MiAporte aboutProyect={adoptreeContent} devops={adoptreeDevops} />
	<ProyectSkills aboutProyect={adoptreeContent} />
	<Contact />
</Layout>
